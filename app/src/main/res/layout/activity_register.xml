<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/ic_app_background3"
    android:id="@+id/coordinatorLayoutRegister"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/register_back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_back_arrow2"/>

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="5dp"
                android:textSize="34sp"
                android:fontFamily="@font/potra"
                android:textColor="@color/colorNavy"
                />

            <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register"
                android:drawableStart="@drawable/ic_name_and_lastname_icon"
                android:drawablePadding="7dp"
                android:hint="Name"
                android:inputType="text"
                android:padding="14dp"
                android:background="@drawable/round_edittext"
                android:textColor="@color/colorNavy"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/register_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_name"
                android:drawableStart="@drawable/ic_name_and_lastname_icon"
                android:drawablePadding="7dp"
                android:hint="Last Name"
                android:inputType="text"
                android:padding="14dp"
                android:background="@drawable/round_edittext"
                android:textColor="@color/colorNavy"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_last_name"
                android:drawableStart="@drawable/ic_email_icon"
                android:drawablePadding="7dp"
                android:hint="Email or Username"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:background="@drawable/round_edittext"
                android:textColor="@color/colorNavy"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_email"
                android:drawableStart="@drawable/ic_password_icon"
                android:drawablePadding="7dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:background="@drawable/round_edittext"
                android:textColor="@color/colorNavy"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/register_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_password"
                android:drawableStart="@drawable/ic_password_icon"
                android:drawablePadding="7dp"
                android:hint="Repeat Password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:background="@drawable/round_edittext"
                android:textColor="@color/colorNavy"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_repeat_password"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_button_border"
                android:text="Create Account"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_btn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/need_login_1st_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/evolve_light_font"
                    android:text="Not your first time here?"
                    android:textColor="@color/colorBlue"
                    android:textSize="15sp"
                    android:layout_marginEnd="5dp"
                    />

                <TextView
                    android:id="@+id/need_login_2nd_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/need_login_1st_half"
                    android:text="Log In."
                    android:textColor="@color/colorNavy"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    />
            </RelativeLayout>
        </RelativeLayout>



    </ScrollView>

</android.support.design.widget.CoordinatorLayout>